---
import MainLayout from "@/layouts/MainLayout.astro";

import { Globe, Copy } from "@lucide/astro";

const { dev } = Astro.props;
---

<MainLayout title={`${dev.name} - Developer Profile`}>
  <div class="min-h-screen pt-16">
    <div class="container mx-auto px-4 py-8">
      <!-- Profile Card -->
      <div class="mx-auto max-w-2xl">
        <div
          class="rounded-xl border border-white/10 bg-white/5 p-8 text-center backdrop-blur-sm"
        >
          <!-- Avatar -->
          <div class="mb-6 flex justify-center">
            <img
              src={dev.avatar || `https://github.com/${dev.username}.png`}
              alt={dev.name}
              class="h-32 w-32 rounded-full border-4 border-white/20"
              loading="lazy"
            />
          </div>

          <!-- Info -->
          <h1 class="mb-2 text-3xl font-bold">{dev.name}</h1>
          <p class="mb-6 text-xl text-white/60">@{dev.username}</p>

          {
            dev.bio && (
              <p class="mb-8 leading-relaxed text-white/70">{dev.bio}</p>
            )
          }

          <!-- Social Links -->
          <div class="mb-8 flex justify-center space-x-4">
            <a
              href={dev.github}
              target="_blank"
              class="flex items-center space-x-2 rounded-lg bg-white/10 px-4 py-2 transition-all duration-300 hover:scale-105 hover:bg-white/20"
            >
              <Github class="h-5 w-5" />
              <span>GitHub</span>
            </a>

            {
              dev.linkedin && (
                <a
                  href={dev.linkedin}
                  target="_blank"
                  class="flex items-center space-x-2 rounded-lg bg-white/10 px-4 py-2 transition-all duration-300 hover:scale-105 hover:bg-white/20"
                >
                  <Linkedin class="h-5 w-5" />
                  <span>LinkedIn</span>
                </a>
              )
            }

            {
              dev.website && (
                <a
                  href={dev.website}
                  target="_blank"
                  class="flex items-center space-x-2 rounded-lg bg-white/10 px-4 py-2 transition-all duration-300 hover:scale-105 hover:bg-white/20"
                >
                  <Globe class="h-5 w-5" />
                  <span>Website</span>
                </a>
              )
            }
          </div>

          <!-- Wallet Address (if available) -->
          {
            dev.slushWallet && (
              <div class="rounded-lg border border-white/10 bg-white/5 p-4">
                <h3 class="mb-2 text-sm font-semibold text-white/80">
                  Wallet Address
                </h3>
                <div class="flex items-center justify-between rounded-lg bg-black/20 p-3">
                  <code class="font-mono text-sm break-all text-white/70">
                    {dev.slushWallet}
                  </code>
                  <button
                    onclick={`navigator.clipboard.writeText('${dev.slushWallet}')`}
                    class="ml-3 rounded p-1 transition-colors hover:bg-white/10"
                    title="Copy to clipboard"
                  >
                    <Copy class="h-4 w-4 text-white/60" />
                  </button>
                </div>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</MainLayout>
